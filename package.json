{
  "name": "space-weirdos",
  "version": "1.0.0",
  "description": "A comprehensive warband builder for the Space Weirdos tabletop game with context-aware validation, intelligent warnings, and real-time cost calculation",
  "type": "module",
  "scripts": {
    "dev:backend": "tsx watch src/backend/server.ts",
    "dev:frontend": "vite",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:frontend": "vite build",
    "build": "npm run build:backend && npm run build:frontend",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:property": "vitest run --grep 'Property'",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "fix": "^0.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "fast-check": "^3.15.0",
    "jsdom": "^27.2.0",
    "prettier": "^3.2.4",
    "supertest": "^7.1.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.15"
  }
}
